<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ChoreographerTest">

    <TextView android:text="FPS" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="46sp"
              android:id="@+id/FpsField" android:layout_centerVertical="true"
              android:layout_alignStart="@+id/dropField" android:layout_alignEnd="@+id/dropField"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dropField"
            android:text="Frame drops!!"
            android:textSize="26sp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="74dp" android:layout_alignEnd="@+id/editText"
            android:layout_alignStart="@+id/editText" android:editable="false"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp" android:text="MediaTek CTO" android:textSize="40dp"
            android:editable="false"/>

</RelativeLayout>
